<?php
/**
 * Notes template for separate item
 *
 */

/**
 * @var $this Hhmedia\Notes\Block\View
 * @see Hhmedia\Notes\Block\View
 */
?>
<?php $_notesItem = $this->getNotes(); ?>
    <div class="notes_item_subtitle">
        <?php echo $this->formatDate($_notesItem->getPublishedAt()) ?> |
        <?php echo $this->escapeHtml($_notesItem->getAuthor()) ?>
    </div>

<div class="notes_item_view">
    <?php if ($imageUrl = $this->getImageUrl($_notesItem, 400)): ?>
       <p><img src="<?php echo $imageUrl ?>" alt="<?php echo $this->escapeHtml($_notesItem->getTitle()) ?>" /></p>
    <?php endif; ?>

    <div class="notes_item_content"><?php echo $_notesItem->getContent() ?></div>

    <div class="pager">
        <a href="<?php echo $this->getBackUrl() ?>">
            <?php echo __('Return to list') ?>
        </a>
    </div>
</div>