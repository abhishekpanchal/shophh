        </div>
        <h4 class="product-title">
            <a href="<?php echo $product->getProductUrl() ?>"><?php echo $product->getName(); ?></a>
        </h4>
        <?php $shortDescription = $product->getShortDescription(); ?>
        <?php $customHelper = $this->helper('Hhmedia\Productpage\Helper\Newproduct'); ?>
        <p>
            <?php echo $customHelper->limit_description($shortDescription, 10); ?>
        </p>
        <h4 class="price">
            <?php echo $priceHelper->currency($price, true, false); ?>
        </h4>
    </div>
<?php endforeach; ?>
