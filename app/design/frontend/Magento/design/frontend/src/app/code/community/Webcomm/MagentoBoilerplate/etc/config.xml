<config>
    <modules>
        <Webcomm_MagentoBoilerplate>
            <version>3.0.21</version>
        </Webcomm_MagentoBoilerplate>
    </modules>
    <global>
        <helpers>
            <magentoboilerplate>
                <class>Webcomm_MagentoBoilerplate_Helper</class>
            </magentoboilerplate>
        </helpers>
        <resources>
            <magentoboilerplate_setup>
                <setup>
                    <module>Webcomm_MagentoBoilerplate</module>
                </setup>
            </magentoboilerplate_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <magentoboilerplate>
                    <file>magentoboilerplate.xml</file>
                </magentoboilerplate>
            </updates>
        </layout>
    </frontend>
    <default>
        <dev>
            <template>
                <allow_symlink>1</allow_symlink>
            </template>
        </dev>
    </default>
</config>
