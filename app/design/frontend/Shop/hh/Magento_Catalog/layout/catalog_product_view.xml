<?xml version="1.0"?>
<page layout="1column-products" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
      <move element="product.info.review" destination="product-reviews"/>
      <move element="product.info.description" destination="product.info.main" after="product_options_wrapper_bottom"/>
      <move element="product.attributes" destination="product.info.main" after="product.info.description"/>
      <referenceBlock name="product.info.stock.sku" remove="true" />
      <referenceBlock name="product.info.overview" remove="true" />

      <referenceContainer name="content">
				<container name="product-row" htmlTag="section" htmlClass="row">
          <container name="product-img" htmlTag="div" htmlClass="col-md-5">
            <container name="product.info.media" htmlTag="div" htmlClass="product media" before="product.info.main">
            </container>
          </container>
      		<container name="product-details" htmlTag="div" htmlClass="col-md-7">
	            <container name="product.info.main" htmlTag="div" htmlClass="product-info-main" after="-">
	            </container>
          </container>
        </container>
        <container name="product-reviews" htmlTag="section" htmlClass="row">
        </container>
      </referenceContainer>
    </body>
</page>